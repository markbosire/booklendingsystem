
<div class="space-y-12">
  <h1 class="font-bold text-4xl">Dashboard</h1>
  <p>
    Welcome, <%= Current.user.email_address %>!
  </p>
  
  <div class="flex space-x-4">
    <%= link_to "View All Books", books_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
    <%= link_to "My Profile", user_path(Current.user), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
    <%= button_to "Logout", session_path, method: :delete, class: "rounded-md px-3.5 py-2.5 bg-red-600 hover:bg-red-500 text-white font-medium" %>
  </div>
  
  <% if @recent_books.any? %>
    <div class="mt-8">
      <h2 class="text-2xl font-semibold mb-4">Recent Books</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @recent_books.each do |book| %>
          <div class="bg-white p-4 rounded-lg border">
            <h3 class="text-lg font-medium"><%= book.title %></h3>
            <p class="text-sm text-gray-600">by <%= book.author %></p>
            <%= link_to "View Details", book_path(book), class: "mt-2 inline-block text-blue-600 hover:underline" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>